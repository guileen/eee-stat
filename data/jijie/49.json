      "lines": [
        {
          "type": "句",
          "value": "革，",
          "children": [
            {
              "type": "集解",
              "list": [
                {
                  "text": "馬融曰：革，改也。",
                  "book": "［釋文］"
                }
              ]
            }
          ]
        },
        {
          "type": "句",
          "value": "已日乃孚，元亨利貞，悔亡。",
          "children": [
            {
              "type": "集解",
              "list": [
                {
                  "text": "宋衷曰：人心習常，不說改易，及變之後，樂其所成，故即日不孚，已日乃孚矣。",
                  "book": "［口訣義］"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "彖",
      "lines": [
        {
          "type": "句",
          "value": "《彖》曰：革，水火相息，",
          "children": [
            {
              "type": "释文",
              "text": "息如字，《說文》作熄。"
            },
            {
              "type": "集解",
              "list": [
                {
                  "text": "馬融曰：息，滅也。",
                  "book": "［釋文］"
                }
              ]
            }
          ]
        },
        {
          "type": "句",
          "value": "二女同居，其志不相得，曰革。"
        },
        {
          "type": "句",
          "value": "已日乃孚，革而信之。",
          "children": [
            {
              "type": "释文",
              "text": "革而信之，一本無之字。 "
            }
          ]
        },
        {
          "type": "句",
          "value": "文明以說，大亨以正，革而當，其悔乃亡。"
        },
        {
          "type": "句",
          "value": "天地革而四時成。湯武革命，順乎天而應乎人。革之時大矣哉。"
        }
      ]
    },
    {
      "type": "大象",
      "lines": [
        {
          "type": "句",
          "value": "《象》曰：澤中有火，革。君子以治曆明時。"
        }
      ]
    },
    {
      "type": "爻",
      "index": 1,
      "lines": [
        {
          "type": "句",
          "value": "初九，鞏用黃牛之革。",
          "children": [
            {
              "type": "集解",
              "list": [
                {
                  "text": "馬融曰：鞏，固也。",
                  "book": "［釋文］"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "小象",
      "index": 1,
      "lines": [
        {
          "type": "句",
          "value": "《象》曰：鞏用黃牛，不可以有為也。"
        }
      ]
    },
    {
      "type": "爻",
      "index": 2,
      "lines": [
        {
          "type": "句",
          "value": "六二，已日乃革之，征吉，无咎。"
        }
      ]
    },
    {
      "type": "小象",
      "index": 2,
      "lines": [
        {
          "type": "句",
          "value": "《象》曰：已日革之，行有嘉也。",
          "children": [
            {
              "type": "释文",
              "text": "行如字，又下孟反。"
            }
          ]
        }
      ]
    },
    {
      "type": "爻",
      "index": 3,
      "lines": [
        {
          "type": "句",
          "value": "九三，征凶，貞厲。革言三就，有孚。"
        }
      ]
    },
    {
      "type": "小象",
      "index": 3,
      "lines": [
        {
          "type": "句",
          "value": "《象》曰：革言三就，又何之矣。"
        }
      ]
    },
    {
      "type": "爻",
      "index": 4,
      "lines": [
        {
          "type": "句",
          "value": "九四，悔亡，有孚，改命吉。"
        }
      ]
    },
    {
      "type": "小象",
      "index": 4,
      "lines": [
        {
          "type": "句",
          "value": "《象》曰：改命之吉，信志也。"
        }
      ]
    },
    {
      "type": "爻",
      "index": 5,
      "lines": [
        {
          "type": "句",
          "value": "九五，大人虎變，未占有孚。"
        }
      ]
    },
    {
      "type": "小象",
      "index": 5,
      "lines": [
        {
          "type": "句",
          "value": "《象》曰：大人虎變，其文柄也。"
        }
      ]
    },
    {
      "type": "爻",
      "index": 6,
      "lines": [
        {
          "type": "句",
          "value": "上六，君子豹變，小人革面，征凶。居貞吉。"
        }
      ]
    },
    {
      "type": "小象",
      "index": 6,
      "lines": [
        {
          "type": "句",
          "value": "《象》曰：君子豹變，其文蔚也。",
          "children": [
            {
              "type": "释文",
              "text": "蔚，音尉，又紆弗反，《說文》作斐。"
            }
          ]
        },
        {
          "type": "句",
          "value": "小人革面，順以從君也。"
        }
      ]
    }
  ]
