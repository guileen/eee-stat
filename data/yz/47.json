      "lines": [
        {
          "type": "卦名",
          "value": "47. ䷮　 困卦 　坎下兌上"
        },
        {
          "type": "句",
          "value": "困，亨，貞，大人吉，无咎。有言不信。"
        }
      ]
    },
    {
      "type": "彖",
      "lines": [
        {
          "type": "句",
          "value": "彖曰：困，剛揜也。險以說，困而不失其所亨，其唯君子乎。貞大人吉，以剛中也；有言不信，尚口乃窮也。"
        }
      ]
    },
    {
      "type": "大象",
      "lines": [
        {
          "type": "句",
          "value": "象曰：澤无水，困。君子以致命遂志。"
        }
      ]
    },
    {
      "type": "爻",
      "index": 1,
      "lines": [
        {
          "type": "句",
          "value": "初六，臀困于株木，入于幽谷，三歲不覿。"
        }
      ]
    },
    {
      "type": "小象",
      "index": 1,
      "lines": [
        {
          "type": "句",
          "value": "象曰：入于幽谷，幽不明也。"
        }
      ]
    },
    {
      "type": "爻",
      "index": 2,
      "lines": [
        {
          "type": "句",
          "value": "九二，困于酒食，朱紱方來，利用享祀，征凶，无咎。"
        }
      ]
    },
    {
      "type": "小象",
      "index": 2,
      "lines": [
        {
          "type": "句",
          "value": "象曰：困于酒食，中有慶也。"
        }
      ]
    },
    {
      "type": "爻",
      "index": 3,
      "lines": [
        {
          "type": "句",
          "value": "六三，困于石，據于蒺蔾，入于其宮，不見其妻，凶。"
        }
      ]
    },
    {
      "type": "小象",
      "index": 3,
      "lines": [
        {
          "type": "句",
          "value": "象曰：據于蒺蔾，乘剛也，入于其宮，不見其妻，不祥也。"
        }
      ]
    },
    {
      "type": "爻",
      "index": 4,
      "lines": [
        {
          "type": "句",
          "value": "九四，來徐徐，困于金車。吝，有終。"
        }
      ]
    },
    {
      "type": "小象",
      "index": 4,
      "lines": [
        {
          "type": "句",
          "value": "象曰：來徐徐，志在下也。雖不當位，有與也。"
        }
      ]
    },
    {
      "type": "爻",
      "index": 5,
      "lines": [
        {
          "type": "句",
          "value": "九五，劓刖，困于赤紱，乃徐有說。利用祭祀。"
        }
      ]
    },
    {
      "type": "小象",
      "index": 5,
      "lines": [
        {
          "type": "句",
          "value": "象曰：劓刖，志未得也；乃徐有說，以中直也；利用祭祀，受福也。"
        }
      ]
    },
    {
      "type": "爻",
      "index": 6,
      "lines": [
        {
          "type": "句",
          "value": "上六，困于葛藟，于臲卼，曰動悔有悔，征吉。"
        }
      ]
    },
    {
      "type": "小象",
      "index": 6,
      "lines": [
        {
          "type": "句",
          "value": "象曰：困于葛藟，未當也；動悔有悔，吉行也。"
        }
      ]
    }
  ]
}